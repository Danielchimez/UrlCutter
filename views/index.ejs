<!DOCTYPE html>
<html>
<head>
  <title>URL Shortener and QR Code Generator</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
    }
    
    h1 {
      margin-top: 50px;
      color: #333;
    }
    
    form {
      margin: 30px auto;
      width: 50%;
    }
    
    input[type="text"] {
      width: 100%;
      padding: 10px;
      margin-bottom: 10px;
    }
    
    button {
      padding: 10px 20px;
      background-color: #4caf50;
      color: white;
      border: none;
      cursor: pointer;
    }
    
    .result {
      margin-top: 50px;
    }
    
    .result table {
      margin: 0 auto;
      width: 80%;
      border-collapse: collapse;
    }
    
    .result th, .result td {
      padding: 10px;
      border: 1px solid #ccc;
    }
    
    .result th {
      background-color: #f2f2f2;
      color: #333;
    }
    
    .qr-code {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1>URL Shortener and QR Code Generator</h1>
  
  <form action="/shorten" method="post">
    <input type="text" name="url" placeholder="Enter URL" required>
    <br>
    <button type="submit">Shorten URL</button>
  </form>
  
  <% if (shortenedUrl) { %>
    <div class="result">
      <h2>Shortened URL Details</h2>
      <table>
        <thead>
          <tr>
            <th>Long URL</th>
            <th>Shortened URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><a href="<%= longUrl %>"><%= longUrl %></a></td>
            <td><a href="<%= shortenedUrl %>"><%= shortenedUrl %></a></td>
            <td><%= shortenedUrl.click %></td>
          </tr>
        </tbody>
      </table>
      <div class="qr-code">
        <h2>QR Code</h2>
        <img src="<%= qrCodeUrl %>">
      </div>
    </div>
  <% } %>
</body>
</html>
